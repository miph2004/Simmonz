@model Simmonz.ViewModel.User.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="RoleAssign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            @for (var i = 0; i < Model.Roles.Count; i++)
           {
                <div class="form-group">
                    <label class="control-label">
                        @Model.Roles[i].Name
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input type="hidden" asp-for="Roles[i].Name" />
                        <input type="hidden" asp-for="Roles[i].Id" />
                    </label>             
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
